{
  "name": "metanotes-server",
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "monopack build -d ./dist src/index.ts",
    "prebuild": "yarn lint",
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts $PWD/data/db.sqlite 127.0.0.1:55001",
    "start:envoy": "envoy -c envoy-config.yaml",
    "start:watch": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/*.ts"
  },
  "license": "Apache-2.0",
  "private": true,
  "dependencies": {
    "@grpc/grpc-js": "^1.2.0",
    "@metanotes/server-api": "0.1.0",
    "google-protobuf": "^3.14.0",
    "grpc-web": "^1.2.1",
    "sql-template-strings": "^2.2.2",
    "sqlite": "^4.0.17",
    "sqlite3": "^5.0.0",
    "node-gyp": "^7.1.2"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.7.3",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.11",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-header": "^3.1.0",
    "eslint-plugin-jest": "24.0.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-tsdoc": "^0.2.7",
    "monopack": "^0.2.6",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "ts-loader": "^8.0.10",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack-merge": "^5.4.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  }
}
