{
  "extends": "../../tsconfig.json",
  
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": ["./node_modules/@types", "./typings"],
    "types": ["node"]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
